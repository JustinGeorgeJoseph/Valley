<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="title"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_60"
        android:layout_margin="@dimen/space_2x"
        android:background="@drawable/bg_rectangle_round">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineHeight="@dimen/text_size_20"
            android:lines="2"
            android:paddingStart="@dimen/space_13"
            android:paddingTop="@dimen/space_9"
            android:paddingEnd="@dimen/space_13"
            android:paddingBottom="@dimen/space_9"
            android:text="@{title}"
            android:fontFamily="@font/gilroy_bold"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_18"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>